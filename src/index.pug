include pug/project-settings.pug
include pug/mixins/mixins.pug

doctype html
html
	head(lang="en")
		include pug/metatags.pug
		+title('Главная')
		include pug/styles.pug
	body
		.page
			form(action="#")
				fieldset
					section
						.photo
							img(src="images/photo.jpg", alt="Nataliia Golovko")
						.personal-info
							each field in ['Имя', 'Дата рождения', 'Город', 'Контактные данные']
								.form-row
									input(type="text", placeholder=field)
					section
						strong.ttl Навыки
						.skills-wrap
							each val in ['html5', 'sass', 'vanillajs', 'git', 'css3', 'less', 'angular', 'foundation', 'бэм', 'gulp', 'jquery', 'bootstrap']
								.skill
									input(type="checkbox", name="skills", id=val)
									label(for=val)= val
					section
						.score-box
							img(src="images/score-arrow.png" alt="Arrow")
						.numbers-box
							strong.ttl Мой уровень владения Java Script
							.score 0





		include pug/scripts.pug
